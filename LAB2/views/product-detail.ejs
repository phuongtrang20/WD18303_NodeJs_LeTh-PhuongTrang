<%- include('header');%>

<div class="container mt-5">
    <h1 class="text-center mb-4">Product Detail</h1>
    <div class="row">
        <div class="col-md-6">
            <img src="/images/<%= product.imageURL %>" class="img-fluid" alt="<%= product.title %>">
        </div>
        <div class="col-md-6">
            <h2><%= product.title %></h2>
            <p class="lead">Price: <%= product.price %> USD</p>
            <p>Description: <%= product.description %></p>
        </div>
    </div>
</div>

<%- include ('footer'); %>